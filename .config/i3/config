set $mod Mod4

# Gaps
for_window [class=".*"] border pixel 1
gaps inner 6

smart_gaps on

mouse_warping none

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec gnome-terminal
bindsym $mod+grave exec gnome-terminal

default_orientation vertical

# toggles split for each new window
for_window [class=".*"] split toggle

# kill current window and toggle split
bindsym $mod+shift+q split toggle ; kill

# toggle gaps
bindsym $mod+g mode "gaps"
mode "gaps" {
    bindsym 1 mode "default", gaps inner all set 6, exec --no-startup-id picom -b --config ~/.config/compton.conf --experimental-backends
    bindsym 2 mode "default", gaps inner all set 0, exec --no-startup-id pkill picom
    bindsym 3 mode "default", gaps inner all set 0
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# toggle gpu
bindsym $mod+Shift+g mode "gpu"
mode "gpu" {
	bindsym 1 mode "default", exec optimus-manager --switch intel --no-confirm
	bindsym 2 mode "default", exec optimus-manager --switch hybrid --no-confirm
	bindsym Return mode "default"
    bindsym Escape mode "default"
}

# screenshot
bindsym $mod+s exec maim -u ~/Pictures/Screenshots/$(date +%F-%H-%M-%S).png
# screenshot only active window
bindsym $mod+Control+s exec maim -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%F-%H-%M-%S).png
#screenshot area and copy to clipboard
bindsym $mod+Shift+s exec "maim -s | xclip -selection clipboard -t image/png"

# start nautilus
